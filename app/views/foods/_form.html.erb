<%= form_for @food do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :autofocus => true, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :Description %>
    <%= f.text_field :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :recommended_level, 'Recommended level (out of 5)' %>
    <%= f.text_field :recommended_level, :class => "form-control", :placeholder => "5" %>
  </div>
  <div class="form-group">
    <%= f.label :recipe_link, 'Recipe link' %>
    <%= f.text_field :recipe_link, :class => "form-control", :placeholder => "http://..." %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.url_field :image, :class => "form-control", :placeholder => "http://..." %>
  </div>

    <%= f.submit "Add Food/Drink" %>
  <% end %>
