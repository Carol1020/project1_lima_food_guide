<!DOCTYPE html>
<html>
  <head>
    <title>Project1LimaFood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="col mx-auto">
      <nav>
        <%= link_to 'Home', root_path, :class => "btn btn-info" %>
        <%= link_to 'Lima Regions', regions_path, :class=> "btn btn-info" %>
        <%= link_to 'Restraurants/Bars', restaurants_path, :class=> "btn btn-info" %>
        <%= link_to 'Must Try Foods/Drinks', foods_path, :class=> "btn btn-info" %>
        <% if @current_user.present? %>
          <% if @current_user.admin? %>
            <%= link_to 'All users', users_path, :class=> "btn btn-light" %>
            <%= link_to 'New Region', new_region_path, :class=> "btn btn-light" %>
            <%= link_to 'New Food', new_food_path, :class=> "btn btn-light" %>
            <%= link_to 'New Restraurant', new_restaurant_path, :class=> "btn btn-light" %>
          <% end %>
          <%= link_to 'My Favorites', favorites_path, :class=> "btn btn-danger" %>
          <%= link_to "Log Out #{@current_user.email}", login_path, :method => 'delete', :class=> "btn btn-link" %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, :class=> "btn btn-link" %>
          <%= link_to 'Log In', login_path, :class=> "btn btn-link" %>
        <% end %>
      </nav>

      <%= yield %>


    </div>

  </body>
</html>
