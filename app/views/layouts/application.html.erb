<!DOCTYPE html>
<html>
  <head>
    <title>Project1LimaFood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-el navbar-light bg-light">
      <div class="container-xl">
        <a class="navbar-brand" href="/">Lima Food Guide</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Lima Regions', regions_path, :class=> "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Restraurants & Bars', restaurants_path, :class=> "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Must Try Foods & Drinks', foods_path, :class=> "nav-link" %>
            </li>

          <% if @current_user.present? %>
            <li class="nav-item">
              <%= link_to 'My Favorites', favorites_path, :class=> "nav-link" %>
            </li>
            <% if @current_user.admin? %>
              <strong>Admin Only</strong>
              <li class="nav-item">
                <%= link_to 'All users', users_path, :class=> "btn btn-light" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Add Region', new_region_path, :class=> "btn btn-light" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Add Food', new_food_path, :class=> "btn btn-light" %>
              </li>
              <li class="nav-item">
                <%= link_to 'Add Restraurant', new_restaurant_path, :class=> "btn btn-light" %>
              </li>
            <% end %>
            <li class="nav-item">
              <%= link_to "Log Out #{@current_user.email}", login_path, :method => 'delete', :class=> "nav-link" %>
            </li>
          </ul>
          <% else %>
            <%= link_to 'Sign Up', new_user_path, :class=> "btn btn-light" %>
            <%= link_to 'Log In', login_path, :class=> "btn btn-light" %>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container-xl">
      <%= yield %>
    </div>
  </body>

  <div class="container-xl">
    <footer class="footer-copyright text-center py-3">Â© 2020 Copyright: CAROLLIU</footer>
  </div>
</html>
