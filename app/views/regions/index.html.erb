
<div class="container">
  <div class="row">
    <div class="col-xl">
      <h1>Lima Regions</h1>
      <% @regions.each do |region| %>
        <p><%= link_to region.name, region_path(region.id) %></p>

        <p><%= image_tag region.image, :class => 'feature' if region.image.present? %></p>

      <% end %>
    </div>
  </div>
</div>
