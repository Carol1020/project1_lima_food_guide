<h1><%= @region.name %></h1>

<ul>
  <li><strong>Overview:</strong> <%= @region.background %></li>
  <li><strong>Things to do:</strong> <%= @region.things_to_do %></li>
  <li><strong>Restaurants:</strong>
    <% @region.restaurants.each do |restaurant| %>
      <%= link_to restaurant.name, restaurant %>
    <% end %></li>
</ul>

<%= image_tag @region.image, :class => 'feature' if @region.image.present? %>

<div class="control">
  <% if @current_user.present? %>
    <% if @current_user.favorites.map(&:region_id).include?(@region.id) %>
      <%= button_to 'Remove favorite', favorite_region_path(@region), :method => 'delete' %>
    <% else %>
      <%= button_to 'Add to favorite', favorite_region_path(@region) %>
    <% end %>

    <% if @current_user.admin? %>
      <%= link_to 'Edit region', edit_region_path(@region) %>
      <%= link_to 'Delete region', @region, :method => 'delete' %>
    <% end %>
  <% end %>


</div>
