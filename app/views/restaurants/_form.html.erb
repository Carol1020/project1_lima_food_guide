<%= form_for @restaurant do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :required => true, :autofocus => true %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :price_range, 'Price range (out of 5)' %>
  <%= f.text_field :price_range %>

  <%= f.label :signature_dishes %>
  <%= f.text_field :signature_dishes %>

  <%= f.label :recommended_level, 'Recommended level (out of 5)' %>
  <%= f.text_field :recommended_level %>

  <%= f.label :image %>
  <%= f.url_field :image %>

  <%= f.submit %>
<% end %>
